@startuml
title US11 - SSD - Schedule an Appointment

actor "Administrator"
participant "System"

"Administrator" -> "System" : POST /api/appointments\nBody: AppointmentDTO

alt consultationType invalid
  "System" --> "Administrator" : 400 Bad Request\n"Invalid consultation type"
else
  alt patient or physician not found
    "System" --> "Administrator" : 404 Not Found
  else
    alt time conflict with existing appointment
      "System" --> "Administrator" : 409 Conflict\n"Physician not available at selected time"
    else
      "System" --> "Administrator" : 201 Created\nBody: { appointmentId, status }
    end
  end
end
@enduml
